<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".day2.ControlStatementActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_puzzle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/simpleIf"
            style="@style/testBtnStyle"
            android:text="SimpleIf" />

        <TextView
            android:id="@+id/showSimpleIf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/simpleSwitch"
            style="@style/testBtnStyle"
            android:text="SimpleSwitch" />

        <TextView
            android:id="@+id/showSimpleSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/complexSwitch"
            style="@style/testBtnStyle"
            android:text="ComplexSwitch" />

        <TextView
            android:id="@+id/showComplexSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp" />
        <Button
            android:id="@+id/ifSwitch"
            style="@style/testBtnStyle"
            android:text="IfSwitch" />

        <TextView
            android:id="@+id/showIfSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp" />
        <Button
            android:id="@+id/forLoopTest"
            style="@style/testBtnStyle"
            android:text="For循环" />

        <TextView
            android:id="@+id/showForLoop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="16sp" />
        <Button
            android:id="@+id/forLoopBreak"
            style="@style/testBtnStyle"
            android:text="For循环Break" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>